
<section id="user-profile">

  <h2>Welcome back, <%= @user.name %></h2>
  <img src="<%= @user.image_url %>" id="user_image">

  <h3>Your TangoChan Stats</h3>
  <p><strong>Total words practiced:</strong> <%= @words_practiced %></p>
  <h3>My Badges:</h3>
    <% if @badges.count == 0 %>
      <p>Go earn some!</p>
    <% else %>
      <% @badges.each do |badge| %>
        <img src="<%= badge.image_url %>" class="badge-image">
      <% end %>
    <% end %>
</section>

<%= render "user_actions" %>
