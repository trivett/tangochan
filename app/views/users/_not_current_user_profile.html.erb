
<section id="user-profile">






  </h3>
  <img src="<%= @user.image_url %>">

  <hr>

  <h3>Profile:</h3>
  <p><strong>Name:</strong> <%= @user.name %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Speaks:</strong> <%= @user.native_language %></p>
  <p><strong>Learning:</strong> Japanese</p>
  <p><strong>Location:</strong> <%= @user.city %>, <%= @user.country %></p>
  <hr>

  <h3>TangoChan Stats</h3>

  <p><strong>Minutes Practiced:</strong> <%= @user.minutes_practiced %></p>

  <p><strong>Total words practiced:</strong> <%= @user.words_practiced %></p>
  <p><strong>Batting average:</strong> <%= @user.words_practiced %></p>
</section>

<section id="user-actions">
    <h3>Lists:</h3>
    <ul id="users-lists">
    <% @lists.each do |list| %>
      <li><%= link_to list.title, list_path(list) %></li>
    <% end %>
    </ul>

    <h3>Badges:</h3> 
    <p id="users-badges">
    <% @badges.each do |badge| %>
      <p><img src="<%= badge.image_url %>"></p>
    <% end %>

</section>
