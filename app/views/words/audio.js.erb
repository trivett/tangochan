    $.ajax({
        url: url,
        jsonpCallback: "pronounce",
        dataType: "jsonp",
        type: "jsonp",
        success: function (json) {
       var mp3 = json.items[0].pathmp3;
       var ogg = json.items[0].pathogg;
       console.log("success " + mp3)
       var myAudio = new Audio(mp3);
       myAudio.play();
   },
    error: function(){
        console.log(encodeURI(word));
        console.log(word);
        console.log("error");
}});
